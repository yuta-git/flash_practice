<!DOCTYPE html>
<html>
  <head>
    <title>FlashPractice</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <%= link_to 'Flash Practice', root_path, class: "title"%>
      <div class="header-right">
      <% if user_signed_in? %>
        <%= link_to 'MyPage', user_path(current_user), class: "mypage" %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "sign-in-btn" %>
      <% else %>  
        <%= link_to "ログイン", new_user_session_path, class: "sign-in-btn" %>
      <% end %>  
      </div>
    </div>
    <%= yield %>
    <div class="footer">
    </div>
  </body>
</html>
